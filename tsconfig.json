{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2017"
        ],
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": [
        "./src/**/*",
        "./gatsby-node.ts",
        "./gatsby-config.ts",
        "./plugins/**/*",
        "./netlify/functions/**/*"
    ]
}